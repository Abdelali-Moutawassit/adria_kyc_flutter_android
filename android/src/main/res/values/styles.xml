<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_backgroud">
        <item name="android:background">@drawable/bkgpopup</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="img_popup">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:src">@drawable/emosucces</item>
    </style>

    <style name="msg_success_scan_recto_line1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/scan_verso_success</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textColor">#787778</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="msg_success_scan_recto_line2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/passons_au_verso</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textColor">#727172</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="msg_success_scan_verso">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/scan_msg_success</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textColor">#787778</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="btn_annuler_popup">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">@string/annuler</item>
        <item name="fontFamily">@font/titillium_web_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ACACAC</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@drawable/bg_white_btn</item>
    </style>

    <style name="btn_continuer_popup">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">@string/continuer</item>
        <item name="fontFamily">@font/titillium_web_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@drawable/bg_orange_btn</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Pas de ActionBar -->
</style>

</resources>